    <None Update="Fixtures\Example.Domain.Part.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Fixtures\Example.Domain.Widget.SomeWidget.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
