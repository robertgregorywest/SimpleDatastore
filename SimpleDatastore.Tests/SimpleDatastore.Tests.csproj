    <Content Include="Fixtures\Example.Domain.Widget.SomeWidget.PersistChildren.json">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
