    <Content Include="Fixtures\Example.Domain.Widget.SomeWidget.Array.json">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
